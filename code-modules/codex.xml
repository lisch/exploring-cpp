<?xml version="1.0" encoding="UTF-8"?>
<!--
 codex configuration for Apress and C++
 Ray Lischner
 2020-05-09
-->
<config version="1.3">
 <!-- Apress style names -->
 <caption>Code Caption</caption>
 <caption>Code_20_Caption</caption>

 <code>Code</code>
 <code>Code Bold</code>
 <code>Code_20_Bold</code>
 <code>Code First</code>
 <code>Code_20_First</code>
 <code>Code First Bold</code>
 <code>Code_20_First_20_Bold</code>
 <code>Code Last</code>
 <code>Code_20_Last</code>
 <code>Code Last Bold</code>
 <code>Code_20_Last_20_Bold</code>
 <code>Code Single</code>
 <code>Code_20_Single</code>
 <code>Code Single Bold</code>
 <code>Code_20_Single_20_Bold</code>
 <code>Code Underline</code>
 <code>Code_20_Underline</code>
 <code>SB Code</code>
 <code>SB_20_Code</code>
 <code>SB Code First</code>
 <code>SB_20_Code_20_First</code>
 <code>SB Code Last</code>
 <code>SB_20_Code_20_Last</code>
 <code>SB Code Single</code>
 <code>SB_20_Code_20_Single</code>

 <ignore>Query</ignore>
 <ignore>Production</ignore>

 <prefix>list</prefix>
 <snippet-prefix>snip</snippet-prefix>

 <!-- Two leading digits or a space and a digit, followed by a space. -->
 <line-number-regex>^([0-9]{2}| ?[0-9]) ?</line-number-regex>

  <property-names
    chapter-number="Chapter Number"
    doxygen="codex-doxygen"
    snippets="codex-snippets"
    config-file="codex-config-file"
  />

 <!-- C++ extensions and comment characters -->
 <extension>.cpp</extension>
 <snippet-extension>.hh</snippet-extension>
 <comment-start>/** </comment-start>
 <comment-end> */</comment-end>
 <doxygen />
</config>
